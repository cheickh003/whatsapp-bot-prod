  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/node": "^20.11.17",
    "@types/qrcode-terminal": "^0.12.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
